<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu2_constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/menu2_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원산지표기"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/background_restaurant1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/menu2_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/menu2_txt1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:text="~~~~~~"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu2_txt2"
            android:src="@drawable/icon_down2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu2_constraint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/menu2_constraint1"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu2_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_origin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu2_constraint2"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원산지 표기"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="교촌오리지날:닭고기(국내산),교촌스틱:닭고기(국내산),교촌윙:닭고기(국내산),교촌콤보:닭고기(국내산)..."
            android:textSize="15dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_txt3"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_down2"
            app:layout_constraintTop_toBottomOf="@id/detail_txt4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_origin"
        android:background="@color/baeminbackgroundColor">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유의사항"
            android:textSize="15dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="· 메뉴 사진은 연출된 이미지로 실제 조리된 음식과 다를 수 있습니다."
            android:textSize="12dp"
            android:textColor="@color/blackForText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_txt5"
            android:layout_marginStart="15dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_txt7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="· 상단 메뉴 및 가격은 업소에서 제공한 정보를 기준으로 작성되었으며 변동될 수 있습니다."
            android:textSize="12dp"
            android:textColor="@color/blackForText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_txt6"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_txt8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="· (주)우아한형제들은 상품거래에 대한 통신판매중개자이며,통신판매의 당사가 아닙니다. 따라서, (주)우아한형제들은 상품·거래정보 및 거래에 대하여 책임을 지지 않습니다."
            android:textSize="12dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/blackForText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_txt7"
            android:layout_marginStart="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
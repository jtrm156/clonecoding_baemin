<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/baeminbackgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/04 (수)"
            android:textSize="15dp"
            android:textColor="@color/blackForText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="· 배달완료"
            android:textSize="15dp"
            android:textColor="@color/blackForText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_txt1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1인분 가성비갑 복씬"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/item_txt1"
            app:layout_constraintStart_toEndOf="@id/item_img3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="23dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문상세"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@id/item_img1"
            android:layout_marginEnd="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/background_restaurant6"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_txt5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="마라샹궈 1인 식사세트(마라샹궈 1인~~~"
            android:textSize="15dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_txt3"
            app:layout_constraintStart_toEndOf="@id/item_img3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_img1"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_img3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/background_restaurant3"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/item_txt1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baemin_category_icon1"
                android:background="@drawable/background_restaurant3"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_img4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_next"
            app:layout_constraintStart_toEndOf="@id/item_txt3"
            app:layout_constraintTop_toBottomOf="@id/item_txt1"
            android:layout_marginTop="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
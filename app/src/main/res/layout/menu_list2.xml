<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_list_constraint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/menu_list_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="교촌 발사믹 치킨"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/menu_list_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/menu_list_txt2"
            app:layout_constraintStart_toStartOf="parent"
            android:text="18,500원"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/menu_list_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/menu_list_txt3"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/background_restaurant1"
            android:text="대표"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/menu_list_img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/baemin_category_icon4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>